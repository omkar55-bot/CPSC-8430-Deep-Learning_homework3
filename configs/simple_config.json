{
  "model_name": "bert-base-chinese",
  "train_data_path": "data/train.json",
  "val_data_path": "data/dev.json",
  "test_data_path": "data/test.json",
  "output_dir": "output/simple",
  
  "max_length": 512,
  "doc_stride": 150,
  "max_answer_length": 30,
  
  "batch_size": 16,
  "eval_batch_size": 32,
  "num_epochs": 3,
  "learning_rate": 3e-5,
  "weight_decay": 0.01,
  "dropout": 0.1,
  
  "use_scheduler": true,
  "warmup_ratio": 0.1,
  "max_grad_norm": 1.0,
  
  "use_fp16": true,
  "gradient_accumulation_steps": 1,
  "num_workers": 4,
  
  "eval_every": 1,
  "save_every": 1,
  "early_stopping": false,
  
  "use_wandb": true,
  "use_ensemble": false,
  "ensemble_models": ["bert-base-chinese", "hfl/chinese-electra-180g-base-discriminator"]
}
