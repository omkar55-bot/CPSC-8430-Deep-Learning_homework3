{
  "model_name": "hfl/chinese-electra-180g-base-discriminator",
  "train_data_path": "data/train.json",
  "val_data_path": "data/dev.json",
  "test_data_path": "data/test.json",
  "output_dir": "output/boss",
  
  "max_length": 512,
  "doc_stride": 150,
  "max_answer_length": 30,
  
  "batch_size": 8,
  "eval_batch_size": 16,
  "num_epochs": 15,
  "learning_rate": 5e-6,
  "weight_decay": 0.005,
  "dropout": 0.3,
  
  "use_scheduler": true,
  "warmup_ratio": 0.2,
  "max_grad_norm": 0.3,
  
  "use_fp16": true,
  "gradient_accumulation_steps": 8,
  "num_workers": 4,
  
  "eval_every": 1,
  "save_every": 3,
  "early_stopping": true,
  
  "use_wandb": true,
  "use_ensemble": true,
  "ensemble_models": [
    "hfl/chinese-electra-180g-base-discriminator",
    "hfl/chinese-roberta-wwm-ext", 
    "hfl/chinese-bert-wwm"
  ]
}
