{
  "model_name": "hfl/chinese-electra-180g-base-discriminator",
  "train_data_path": "data/train.json",
  "val_data_path": "data/dev.json",
  "test_data_path": "data/test.json", 
  "output_dir": "output/strong",

  "max_length": 512,
  "doc_stride": 150,
  "max_answer_length": 30,
  
  "batch_size": 12,
  "eval_batch_size": 24,
  "num_epochs": 8,
  "learning_rate": 1e-5,
  "weight_decay": 0.01,
  "dropout": 0.2,
  
  "use_scheduler": true,
  "warmup_ratio": 0.15,
  "max_grad_norm": 0.5,
  
  "use_fp16": true,
  "gradient_accumulation_steps": 4,
  "num_workers": 4,
  
  "eval_every": 1,
  "save_every": 2,
  "early_stopping": true,
  
  "use_wandb": true,
  "use_ensemble": false,
  "ensemble_models": ["hfl/chinese-electra-180g-base-discriminator", "hfl/chinese-roberta-wwm-ext", "hfl/chinese-bert-wwm"]
}
